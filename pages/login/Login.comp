          passwordMess.style.color = "red"
        }
      })
      
      form.onsubmit = e => {
        e.preventDefault()
        if (passwordIsValid && emailIsValid) {
          if (loginType == "signup") signUp(e)
          else signIn(e)
        }
      }
      
      select("form p button").onclick = e => {
        if (loginType == "signin") return moveToSignUp()
        else moveToSignIn()
      }
